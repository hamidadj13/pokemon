{% include 'base.html.twig' %}
<main role="main" class="container">
<h1>Liste des utilisateurs</h1>
{% for message in app.flashes('success') %}
  <div class="alert alert-success">{{message}}</div>
{% endfor %}
 <div class="row"> 
  {% for user in users %}
  <div class="col-md-4">
    <div class="card mb-4 box-shadow">
      <div class="card-body">
        <p class="card-title">{{ user.email }} #{{ user.id }}</p>
        <p class="card-text"></p>

        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a class="btn btn-sm btn-outline-secondary" href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
            <a class="btn btn-sm btn-outline-secondary" style="margin-right:10px" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
            {{ include('user/_delete.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
    {% else %}
        Aucun utilisateur.
    {% endfor %}
</div>
<br>
<div class="navigation">
    {{ knp_pagination_render(users) }}
</div>
<br>

